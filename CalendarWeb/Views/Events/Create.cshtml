@model CalendarWeb.Models.CalendarEventCategory
<form asp-action="Create" asp-controller="Events" >
    @*//enctype="multipart/form-data"*@
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title">Modal title</h5>

            <button type="button" asp-action="Event" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">

            <div class="form-group">
                <label asp-for="EventName" class="control-label"></label>
                <input asp-for="EventName" class="form-control" id="EventName" />
                <span asp-validation-for="EventName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EventColor" class="control-label"></label>
                <input asp-for="EventColor" class="form-control" id="EventColor" />
                <span asp-validation-for="EventColor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RemarkPosition" class="control-label"></label>
                <select asp-for="RemarkPosition" class="form-control" id="RemarkPosition">
                    <option value="InPlace">InPlace</option>
                    <option value="Footer">Footer</option>
                    <option value="None">None</option>
                </select>
                <span asp-validation-for="RemarkPosition" class="text-danger"></span>
            </div>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" asp-action="Index" asp-controller="Events">Close</button>
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
